@model Academy.Core.Models.BlogPost
@{
    var recentPosts = ViewData["RecentPosts"] as IEnumerable<Academy.Core.Models.BlogPost> ?? Enumerable.Empty<Academy.Core.Models.BlogPost>();
    var popularPosts = ViewData["PopularPosts"] as IEnumerable<Academy.Core.Models.BlogPost> ?? Enumerable.Empty<Academy.Core.Models.BlogPost>();
    var categories = ViewData["Categories"] as IEnumerable<string> ?? Enumerable.Empty<string>();
    var tags = ViewData["Tags"] as IEnumerable<string> ?? Enumerable.Empty<string>();
}

<div class="min-h-screen bg-gray-50">
    <!-- Article Header -->
    <article class="bg-white">
        <!-- Hero Image -->
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="relative h-96 bg-gray-900">
                <img src="@Model.ImageUrl" alt="@Model.Title" class="w-full h-full object-cover">
                <div class="absolute inset-0 bg-black bg-opacity-40"></div>
                <div class="absolute inset-0 flex items-center justify-center">
                    <div class="text-center text-white max-w-4xl mx-auto px-4">
                        <h1 class="text-4xl md:text-5xl font-bold mb-4">@Model.Title</h1>
                        <div class="flex items-center justify-center space-x-4 text-lg">
                            @if (!string.IsNullOrEmpty(Model.Author))
                            {
                                <span>@Model.Author</span>
                            }
                            <time datetime="@Model.CreatedAt.ToString("yyyy-MM-dd")">
                                @Model.CreatedAt.ToString("dd.MM.yyyy")
                            </time>
                            <span>@Model.ViewCount прегледа</span>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="bg-gradient-to-r from-primary-600 to-primary-700 text-white py-16">
                <div class="max-w-4xl mx-auto px-4 text-center">
                    <h1 class="text-4xl md:text-5xl font-bold mb-4">@Model.Title</h1>
                    <div class="flex items-center justify-center space-x-4 text-lg">
                        @if (!string.IsNullOrEmpty(Model.Author))
                        {
                            <span>@Model.Author</span>
                        }
                        <time datetime="@Model.CreatedAt.ToString("yyyy-MM-dd")">
                            @Model.CreatedAt.ToString("dd.MM.yyyy")
                        </time>
                        <span>@Model.ViewCount прегледа</span>
                    </div>
                </div>
            </div>
        }

        <!-- Article Meta -->
        <div class="max-w-4xl mx-auto px-4 py-6">
            <div class="flex flex-wrap items-center justify-between gap-4 border-b border-gray-200 pb-6">
                <div class="flex items-center space-x-4">
                    @if (!string.IsNullOrEmpty(Model.Category))
                    {
                        <a href="/blog/category/@Model.Category" class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary-100 text-primary-800 hover:bg-primary-200 transition-colors">
                            @Model.Category
                        </a>
                    }
                    
                    @if (Model.Tags.Any())
                    {
                        <div class="flex items-center space-x-2">
                            @foreach (var tag in Model.Tags)
                            {
                                <a href="/blog/tag/@tag" class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors">
                                    #@tag
                                </a>
                            }
                        </div>
                    }
                </div>
                
                <div class="flex items-center space-x-4 text-sm text-gray-500">
                    <span>Публикувана на @Model.CreatedAt.ToString("dd.MM.yyyy")</span>
                    @if (Model.UpdatedAt.HasValue)
                    {
                        <span>• Обновена на @Model.UpdatedAt.Value.ToString("dd.MM.yyyy")</span>
                    }
                </div>
            </div>
        </div>

        <!-- Article Content -->
        <div class="max-w-4xl mx-auto px-4 py-8">
            @if (!string.IsNullOrEmpty(Model.Summary))
            {
                <div class="mb-8 p-6 bg-blue-50 border-l-4 border-blue-400 rounded-lg">
                    <p class="text-lg text-blue-800 font-medium">@Model.Summary</p>
                </div>
            }

            <div class="prose prose-lg max-w-none">
                @Html.Raw(Model.Content)
            </div>

            <!-- Article Footer -->
            <div class="mt-12 pt-8 border-t border-gray-200">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-4">
                        <span class="text-gray-500">Споделете:</span>
                        <div class="flex space-x-2">
                            <a href="https://www.facebook.com/sharer/sharer.php?u=@Context.Request.Scheme://@Context.Request.Host@Context.Request.Path" 
                               target="_blank" 
                               class="p-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors">
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                                </svg>
                            </a>
                            <a href="https://twitter.com/intent/tweet?url=@Context.Request.Scheme://@Context.Request.Host@Context.Request.Path&text=@Model.Title" 
                               target="_blank" 
                               class="p-2 bg-blue-400 text-white rounded hover:bg-blue-500 transition-colors">
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                                </svg>
                            </a>
                            <a href="https://www.linkedin.com/sharing/share-offsite/?url=@Context.Request.Scheme://@Context.Request.Host@Context.Request.Path" 
                               target="_blank" 
                               class="p-2 bg-blue-700 text-white rounded hover:bg-blue-800 transition-colors">
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                    
                    <div class="text-right">
                        <p class="text-sm text-gray-500">@Model.ViewCount прегледа</p>
                    </div>
                </div>
            </div>
        </div>
    </article>

    <!-- Related Content -->
    <div class="max-w-7xl mx-auto px-4 py-12">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Recent Posts -->
            @if (recentPosts.Any())
            {
                <div class="lg:col-span-2">
                    <h2 class="text-2xl font-bold text-gray-900 mb-6">Последни статии</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        @foreach (var post in recentPosts.Take(4))
                        {
                            <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                                @if (!string.IsNullOrEmpty(post.ImageUrl))
                                {
                                    <img src="@post.ImageUrl" alt="@post.Title" class="w-full h-32 object-cover">
                                }
                                <div class="p-4">
                                    <h3 class="font-semibold text-gray-900 mb-2 line-clamp-2">
                                        <a href="/blog/@post.Slug" class="hover:text-primary-600">@post.Title</a>
                                    </h3>
                                    <p class="text-sm text-gray-500 mb-2 line-clamp-2">@post.Summary</p>
                                    <div class="flex items-center justify-between text-xs text-gray-400">
                                        <time datetime="@post.CreatedAt.ToString("yyyy-MM-dd")">
                                            @post.CreatedAt.ToString("dd.MM.yyyy")
                                        </time>
                                        <span>@post.ViewCount прегледа</span>
                                    </div>
                                </div>
                            </article>
                        }
                    </div>
                </div>
            }

            <!-- Sidebar -->
            <div class="lg:col-span-1">
                <!-- Categories -->
                @if (categories.Any())
                {
                    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Категории</h3>
                        <div class="space-y-2">
                            @foreach (var category in categories)
                            {
                                <a href="/blog/category/@category" class="block text-gray-600 hover:text-primary-600 transition-colors">
                                    @category
                                </a>
                            }
                        </div>
                    </div>
                }

                <!-- Popular Posts -->
                @if (popularPosts.Any())
                {
                    <div class="bg-white rounded-lg shadow-md p-6">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Популярни статии</h3>
                        <div class="space-y-4">
                            @foreach (var post in popularPosts.Take(5))
                            {
                                <div class="flex items-start space-x-3">
                                    @if (!string.IsNullOrEmpty(post.ImageUrl))
                                    {
                                        <img src="@post.ImageUrl" alt="@post.Title" class="w-16 h-16 object-cover rounded">
                                    }
                                    <div class="flex-1 min-w-0">
                                        <h4 class="text-sm font-medium text-gray-900 line-clamp-2">
                                            <a href="/blog/@post.Slug" class="hover:text-primary-600">@post.Title</a>
                                        </h4>
                                        <p class="text-xs text-gray-500 mt-1">
                                            @post.ViewCount прегледа
                                        </p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Back to Blog -->
    <div class="bg-gray-100 py-8">
        <div class="max-w-4xl mx-auto px-4 text-center">
            <a href="/blog" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 transition-colors">
                <svg class="mr-2 -ml-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 010 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Обратно към блога
            </a>
        </div>
    </div>
</div>
