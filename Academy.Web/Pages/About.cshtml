@page
@model AboutModel
@{
    ViewData["Title"] = "За Нас";
    ViewData["Description"] = "Научете повече за нашата академия, екипа от преподаватели и нашата мисия да помагаме на хората да развиват своите умения.";
    ViewData["Keywords"] = "за нас, академия, екип, преподаватели, мисия, визия, история";
}

<!-- Header Section -->
<section class="bg-gradient-to-r from-primary-600 to-primary-700 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h1 class="text-4xl md:text-5xl font-bold mb-4">За Нас</h1>
            <p class="text-xl text-primary-100 max-w-2xl mx-auto">
                Открийте нашата история, мисия и екипа от експерти, които правят обучението възможно
            </p>
        </div>
    </div>
</section>

<!-- Mission & Vision Section -->
<section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div>
                <h2 class="text-3xl font-bold text-gray-900 mb-6">Нашата Мисия</h2>
                <p class="text-lg text-gray-600 mb-6">
                    Нашата мисия е да предоставяме качествено образование и да помагаме на хората да развиват своите умения 
                    и да постигнат успех в избраната от тях област.
                </p>
                <p class="text-lg text-gray-600 mb-6">
                    Вярваме, че всеки човек има право на достъп до качествено обучение, което да му помогне да реализира 
                    своя потенциал и да постигне своите цели.
                </p>
                <div class="flex items-center space-x-4">
                    <div class="bg-primary-100 p-3 rounded-lg">
                        <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900">Качествено образование</h3>
                        <p class="text-gray-600">Предоставяме курсове с високо качество</p>
                    </div>
                </div>
            </div>
            
            <div class="bg-gray-50 p-8 rounded-lg">
                <h3 class="text-2xl font-bold text-gray-900 mb-4">Нашата Визия</h3>
                <p class="text-gray-600 mb-6">
                    Да бъдем водеща академия в България, която подготвя специалисти за бъдещето и помага на хората 
                    да развиват своите умения в динамично променящия се свят.
                </p>
                <div class="space-y-4">
                    <div class="flex items-center">
                        <div class="w-3 h-3 bg-primary-600 rounded-full mr-3"></div>
                        <span class="text-gray-700">Иновативни методи на обучение</span>
                    </div>
                    <div class="flex items-center">
                        <div class="w-3 h-3 bg-primary-600 rounded-full mr-3"></div>
                        <span class="text-gray-700">Практически опит и проекти</span>
                    </div>
                    <div class="flex items-center">
                        <div class="w-3 h-3 bg-primary-600 rounded-full mr-3"></div>
                        <span class="text-gray-700">Поддръжка след завършване</span>
                    </div>
                    <div class="flex items-center">
                        <div class="w-3 h-3 bg-primary-600 rounded-full mr-3"></div>
                        <span class="text-gray-700">Партньорство с индустрията</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- History Section -->
<section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">Нашата История</h2>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                От скромно начало до водеща академия в България
            </p>
        </div>
        
