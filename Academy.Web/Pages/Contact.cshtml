@page
@model ContactModel
@{
    ViewData["Title"] = "Контакти";
    ViewData["Description"] = "Свържете се с нас за въпроси относно нашите курсове или за повече информация.";
    ViewData["Keywords"] = "контакти, академия, курсове, въпроси, информация";
}

<!-- Header Section -->
<section class="bg-gradient-to-r from-primary-600 to-primary-700 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h1 class="text-4xl md:text-5xl font-bold mb-4">Свържете се с нас</h1>
            <p class="text-xl text-primary-100 max-w-2xl mx-auto">
                Имате въпроси? Ние сме тук, за да ви помогнем. Изпратете ни съобщение и ще се свържем с вас скоро.
            </p>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Contact Form -->
            <div>
                <h2 class="text-3xl font-bold text-gray-900 mb-6">Изпратете ни съобщение</h2>
                
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
                        <strong>Успех!</strong> @TempData["SuccessMessage"]
                    </div>
                }

                <form method="post" class="space-y-6">
                    <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="ContactMessage.Name" class="block text-sm font-medium text-gray-700 mb-2">Име *</label>
                            <input asp-for="ContactMessage.Name" 
                                   type="text" 
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                                   placeholder="Вашето име">
                            <span asp-validation-for="ContactMessage.Name" class="text-red-600 text-sm"></span>
                        </div>
                        
                        <div>
                            <label asp-for="ContactMessage.Email" class="block text-sm font-medium text-gray-700 mb-2">Имейл *</label>
                            <input asp-for="ContactMessage.Email" 
                                   type="email" 
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                                   placeholder="your@email.com">
                            <span asp-validation-for="ContactMessage.Email" class="text-red-600 text-sm"></span>
                        </div>
                    </div>
                    
                    <div>
                        <label asp-for="ContactMessage.Subject" class="block text-sm font-medium text-gray-700 mb-2">Тема</label>
                        <input asp-for="ContactMessage.Subject" 
                               type="text" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                               placeholder="Тема на съобщението">
                        <span asp-validation-for="ContactMessage.Subject" class="text-red-600 text-sm"></span>
                    </div>
                    
                    <div>
                        <label asp-for="ContactMessage.Message" class="block text-sm font-medium text-gray-700 mb-2">Съобщение *</label>
                        <textarea asp-for="ContactMessage.Message" 
                                  rows="6"
                                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors resize-none"
                                  placeholder="Напишете вашето съобщение тук..."></textarea>
                        <span asp-validation-for="ContactMessage.Message" class="text-red-600 text-sm"></span>
                    </div>
                    
                    <div>
                        <button type="submit" 
                                class="w-full bg-primary-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-primary-700 transition-colors focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2">
                            Изпрати съобщение
                        </button>
                    </div>
                </form>
            </div>
            
            <!-- Contact Information -->
            <div>
                <h2 class="text-3xl font-bold text-gray-900 mb-6">Информация за контакт</h2>
                
                <div class="space-y-8">
                    <!-- Address -->
                    <div class="flex items-start">
                        <div class="flex-shrink-0">
                            <div class="bg-primary-100 w-12 h-12 rounded-lg flex items-center justify-center">
                                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
